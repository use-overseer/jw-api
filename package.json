{
  "name": "jw-api",
  "version": "1.0.0",
  "description": "An API for JW related data. Provides data from JW.org, WOL, Mediator API, Pub Media API, Bible Data API, and more.",
  "homepage": "https://github.com/mtdvlpr-org/jw-api#readme",
  "license": "(MIT OR Apache-2.0)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mtdvlpr-org/jw-api.git"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "prepare:husky": "node .husky/install.mjs",
    "prepare:nuxt": "nuxt prepare",
    "dev": "nuxt dev",
    "build": "nuxt build",
    "preview": "nuxt preview",
    "analyze": "nuxt analyze",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:types": "nuxt typecheck",
    "lint:commit": "commitlint -g commitlint.config.ts --edit",
    "test:unit": "vitest run --project browser --project server",
    "test:e2e": "vitest run --project e2e",
    "test:nuxt": "vitest run --project nuxt",
    "test:coverage": "vitest run --coverage --exclude test/nuxt/server/integration.test.ts",
    "test": "vitest --exclude test/nuxt/server/integration.test.ts",
    "postinstall": "pnpm prepare:husky && pnpm prepare:nuxt"
  },
  "dependencies": {
    "@nuxtjs/mcp-toolkit": "^0.6.2",
    "jszip": "^3.10.1",
    "meeting-schedules-parser": "^4.3.0",
    "node-html-parser": "^7.0.2",
    "nuxt": "^4.2.2",
    "nuxt-security": "2.5.0",
    "pino": "^10.1.1",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "sql.js": "^1.13.0",
    "zod": "^4.3.5",
    "zod-openapi": "^5.4.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@nuxt/eslint": "^1.12.1",
    "@nuxt/test-utils": "^3.23.0",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/node": "^22.19.5",
    "@types/sql.js": "^1.4.9",
    "@types/unzipper": "^0.10.11",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "^1.6.6",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^5.3.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "happy-dom": "^20.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright-core": "^1.57.0",
    "prettier": "^3.7.4",
    "sass-embedded": "^1.97.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.2.2"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "engines": {
    "node": ">=22.18.0",
    "pnpm": ">=10.28.0"
  },
  "packageManager": "pnpm@10.28.0"
}
